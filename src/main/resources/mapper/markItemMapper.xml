<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.dao.MarkItemDao">
	
	<insert id="insertMarkItem" parameterType="MarkItem" keyProperty="id" useGeneratedKeys="true">
		insert into markItem values(null, #{score}, #{remark}, #{date}, #{manhole.id}, #{user.id})
	</insert>
	
	<update id="updateMarkItem" parameterType="MarkItem">
		update markItem set score = #{score}, remark = #{remark} where id = #{id}
	</update>
	
	<delete id="deleteMarkItem" parameterType="MarkItem">
		delete from markItem where id = #{id}
	</delete>
	
	<select id="findInfoMarkItem" parameterType="Map" resultMap="MarkItemMap">
		select a.*, b.*, u.name u_name, t.name t_name from markitem a
			left join manhole b on b.id = a.manholeid
			left join users u on u.id = a.userid
			left join users t on t.id = b.userid
		<where>
			<if test="id != null">
				and a.id = #{id}
			</if>
			<if test="manhole != null">
				and a.manholeid = #{manhole.id}
			</if>
			<if test="company != null">
				and u.companyid = #{company.id}
			</if>
			<if test="user != null">
				and u.id = #{user.id}
			</if>
			<if test="temp != null">
				and t.id = #{temp.id}
			</if>
		</where>
	</select>
	
	<select id="findListMarkItem" parameterType="Map" resultMap="MarkItemMap">
		select a.*, b.*, u.name u_name, t.name t_name from markitem a
			left join manhole b on b.id = a.manholeid
			left join users u on u.id = a.userid
			left join users t on t.id = b.userid
		<where>
			<if test="id != null">
				and b.id = #{id}
			</if>
			<if test="name != null">
				and b.name like #{name}
			</if>
			<if test="company != null">
				and u.companyid = #{company.id}
			</if>
			<if test="user != null">
				and u.id = #{user.id}
			</if>
			<if test="temp != null">
				and t.id = #{temp.id}
			</if>
		</where>
		order by a.id desc
	</select>
	
	<select id="findViewMarkItem" parameterType="Map" resultMap="MarkViewMap">
		select b.*, c.name, count(a.id) count from markitem a
			right join manhole b on b.id = a.manholeid and a.userid = 2
			left join users c on c.id = a.userid
			left join users d on d.id = b.userid
		where b.state = '已提交'
		<if test="name != null">
			and b.projectno like #{name}
		</if>
		<if test="company != null">
			and d.companyid = #{company.id}
		</if>
		group by b.id order by b.id desc
	</select>
	
	<resultMap id="MarkViewMap" type="MarkItem">
		<id property="id" column=""/>
		<result property="count" column="count"/>
		<association property="manhole" javaType="Manhole">
			<id property="id" column="id"/>
			<result property="projectno" column="projectno"/>
			<result property="workorder" column="workorder"/>
			<result property="areacode" column="areacode"/>
			<result property="node" column="node"/>
			<result property="surveyname" column="surveyname"/>
			<result property="surveydate" column="surveydate"/>
			<association property="user" javaType="User">
				<id property="id" column="userid"/>
				<result property="name" column="name"/>
			</association>
		</association>
	</resultMap>
	
