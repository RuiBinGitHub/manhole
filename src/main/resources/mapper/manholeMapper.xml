	<update id="updateManhole" parameterType="Manhole">
		update manhole set node = #{node},
			gridx = #{gridx},
			gridy = #{gridy},
			areacode = #{areacode},
			surveyname = #{surveyname},
			surveydate = #{surveydate},
			projectno = #{projectno},
			workorder = #{workorder},
			manholeid = #{manholeid},
			drainage = #{drainage},
			location = #{location},
			yearlaid = #{yearlaid},
			status = #{status},
			method = #{method},
			nodetype = #{nodetype},
			shape = #{shape},
			hinge = #{hinge},
			locker = #{locker},
			duties = #{duties},
			cover1 = #{cover1},
			cover2 = #{cover2},
			side = #{side},
			course = #{course},
			depths = #{depths},
			shaft1 = #{shaft1},
			shaft2 = #{shaft2},
			soffit = #{soffit},
			steps = #{steps},
			ladder = #{ladder},
			lndgs = #{lndgs},
			csize1 = #{csize1},
