			photo3 = #{photo3},
			photo4 = #{photo4},
			photo5 = #{photo5},
			photo6 = #{photo6},
			util1 = #{util1},
			util2 = #{util2},
			util3 = #{util3},
			util4 = #{util4},
			util5 = #{util5},
			util6 = #{util6},
			photono1 = #{photono1},
			photono2 = #{photono2},
			slopeno = #{slopeno},
			remarks = #{remarks},
			dplan = #{dplan},
			rplan = #{rplan},
			ctype = #{ctype},
			rtype = #{rtype},
			path1 = #{path1},
			path2 = #{path2},
			with1 = #{with1},
			with2 = #{with2},
			with3 = #{with3},
			projectid = #{project.id}
		where id = #{id}
	</update>

	<delete id="deleteManhole" parameterType="Manhole">
		delete from manhole where id = #{id}
	</delete>

	<select id="findInfoManhole" parameterType="Map" resultMap="ManholeMap">
		select m.*, p.name p_name, u.id u_id from manhole m left join project p on p.id = m.projectid left join users u on u.id = p.userid
		<where>
			<if test="id != null">
				and m.id = #{id}
			</if>
			<if test="user != null">
				and u.id = #{user.id}
			</if>
			<if test="company != null">
				and u.companyid = #{company.id}
			</if>
		</where>
	</select>
	
	<select id="findListManhole" parameterType="Map" resultMap="ManholeMap">
		select m.*, p.name p_name, u.id u_id from manhole m left join project p on p.id = m.projectid left join users u on u.id = p.userid
		<where>
			<if test="xy != null">
				m.gridx !='' and m.gridy != ''
			</if>
			<if test="name != null">
				and p.name like #{name}
			</if>
			<if test="user != null">
				and u.id = #{user.id}
			</if>
			<if test="project != null">
				and m.projectid = #{project.id}
			</if>
			<if test="company != null">
				and u.companyid = #{company.id}
			</if>
		</where>
		order by id desc
	</select>
	
