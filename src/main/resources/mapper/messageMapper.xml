<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.dao.MessageDao">

	<insert id="insertMessage" parameterType="Message" keyProperty="id" useGeneratedKeys="true">
		insert into message values(null, #{title}, #{state}, #{date}, #{markItem.id}, #{manhole.id}, #{user.id})
	</insert>

	<update id="updateMessage" parameterType="Message">
		update message set state = #{state} where id = #{id}
	</update>

	<delete id="deleteMessage" parameterType="Message">
		delete from message where id = #{id}
	</delete>

	<select id="findInfoMessage" parameterType="Map" resultMap="MessageMap">
		select a.*, b.projectno, c.name from message a
			left join manhole b on b.id = a.manholeid
			left join users c on c.id = a.userid
		<where>
			<if test="id != null">
				and a.id = #{id}
			</if>
			<if test="user != null">
				and c.id = #{user.id}
			</if>
		</where>
	</select>
	
	<select id="findListMessage" parameterType="Map" resultMap="MessageMap">
		select a.*, b.projectno, c.name from message a
			left join manhole b on b.id = a.manholeid
			left join users c on c.id = a.userid
		<where>
			<if test="state != null and state != ''">
				and a.state = #{state}
			</if>
			<if test="user != null">
				and c.id = #{user.id}
			</if>
		</where>
		order by id desc
	</select>
	
	<select id="getCount" parameterType="Map" resultType="int">
		select count(*) from message
		<where>
			<if test="state != null and state != ''">
				and state = #{state}
			</if>
			<if test="user != null">
				and userid = #{user.id}
			</if>
		</where>
	</select>
	
	<resultMap id="MessageMap" type="Message">
		<id property="id" column="id"/>
		<result property="title" column="title"/>
		<result property="state" column="state"/>
		<result property="date" column="date"/>
		<result property="markItem.id" column="markid"/>
		<association property="manhole" javaType="Manhole">
			<id property="id" column="manholeid"/>
			<result property="projectno" column="projectno"/>
		</association>
		<association property="user" javaType="User">
			<id property="id" column="userid"/>
			<result property="name" column="name"/>
		</association>
	</resultMap>
</mapper>
 